	<element name="Obsidian Armor" type="Magic Item" source="Northland 1300" id="ID_N1300_MAGIC_ITEM_OBSIDIAN_CHAIN_SHIRT">
		<supports>Armor</supports>
		<description>
			<p>This suit of armor is made of obsidian, providing 2 more AC than a steel equivalent.</p>
		</description>
		<setters>
			<set name="keywords">medium</set>
			<set name="category">Magic Armor</set>
			<set name="cost" currency="gp">500</set>
			<set name="weight" lb="20">20 lb.</set>
			<set name="slot">body</set>
			<set name="type" addition="chain shirt">Armor</set>
			<set name="rarity">Uncommon</set>
			<set name="armor">Chain Shirt</set>
			<set name="name-format">Obsidian Chain Shirt</set>
		</setters>
		<rules>
			<stat name="ac:calculation" value="2" bonus="armor:enhancement" />
